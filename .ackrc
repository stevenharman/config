# == blank lines freak out ack on Windows? ==
#
--type-add=ruby=.haml,.rake,.rsel,.builder
--type-add=html=.erb,.haml,.tmpl,.spark,.slim
--type-set=spark=.spark
--type-set=slim=.slim
--type-add=js=.coffee,.js.erb
--type-set=coffee=.coffee
--type-add=css=.scss,.sass,.less
--type-set=less=.less
--type-set=sass=.scss,sass
--type-set=cucumber=.feature
#
--ignore-dir=vendor
--ignore-dir=log
--ignore-dir=tmp
--ignore-dir=doc
--ignore-dir=coverage
--ignore-dir=fixtures
--ignore-dir=script
--ignore-dir=system
#
--sort-files
--color
--follow
--group
