# == blank lines freak out ack on Windows? ==
#
--type-add=ruby:ext:haml,rake,rsel,builder
--type-add=html:ext:erb,haml,tmpl,spark,slim,mustache
--type-set=slim:ext:slim
--type-set=mustache:ext:mustache
--type-add=js:ext:coffee,jserb
--type-set=coffee:ext:coffee
--type-add=css:ext:scss,sass,less
--type-set=less:ext:less
--type-set=sass:ext:scss,sass
--type-set=cucumber:ext:feature
--type-set=markdown:ext:md,mkd,markdown
#
--ignore-dir=.rbx
--ignore-dir=.sass-cache
--ignore-dir=_site
--ignore-dir=coverage
--ignore-dir=dist
--ignore-dir=doc
--ignore-dir=fixtures
--ignore-dir=log
--ignore-dir=script
--ignore-dir=system
--ignore-dir=tmp
#
--sort-files
--color
--follow
--group
